{{#each sources as |source|}}
  <article class="bt bb b--black-10">
    <a class="db pv4 ph3 ph0-l no-underline black dim" href="#0">
      <div class="flex flex-column flex-row-ns">
        <div class="pr3-ns mb4 mb0-ns w-100 w-40-ns">
          {{source-image name=source.name url=source.url size='large'}}
        </div>
        <div class="w-100 w-60-ns pl3-ns">
          <h1 class="f3 fw1 baskerville mt0 lh-title t-name">{{source.name}}</h1>
          <p class="f6 f5-l lh-copy t-description">{{source.description}}</p>
          <p class="f6 lh-copy mv0 t-category">{{source.category}}</p>
          <p class="f6 lh-copy mv0 t-country">{{source.country}}</p>
          <p class="f6 lh-copy mv0 t-language">{{source.language}}</p>
        </div>
      </div>
    </a>
  </article>
{{else}}
  <h4>
    No Sources found
  </h4>
{{/each}}
